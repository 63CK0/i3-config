## Assign
assign [class="chromium-browser"] → 1 :  chromium
assign [class="jetbrains-phpstorm"] → 3 :  code
assign [class="jetbrains-webstorm"] → 3 :  code
assign [class="Pidgin"] → 4 :  messaging
assign [class="Thunderbird"] → 4 :  messaging

workspace "1 :  chromium" output DP1
workspace "2 :  terminal" output HDMI1
workspace "3 :  code" output HDMI1
workspace "4 :  messaging" output DP1


bindsym $mod+Shift+n \
rename workspace 1 to 1 :  chromium; \
rename workspace 2 to 2 :  terminal; \
rename workspace 3 to 3 :  code; \
rename workspace 4 to 4 :  messaging

bindsym $mod+m workspace 4 :  messaging;append_layout ~/.config/i3/messaging-workspace.json; \
exec --no-startup-id thunderbird; \
exec pidgin; \
exec --no-startup-id chromium-browserO


bindsym $mod+Shift+l append_layout ~/.config/i3/terminal-workspace.json;\
exec --no-startup-id "sh -c 'sleep 0.1; exec gnome-terminal'"; \
exec --no-startup-id "sh -c 'sleep 0.2; exec gnome-terminal'"; \
exec --no-startup-id "sh -c 'sleep 0.3; exec gnome-terminal'"; \
exec --no-startup-id "sh -c 'sleep 0.4; exec gnome-terminal --role=clock -e tty-clock'"; \
exec --no-startup-id "sh -c 'sleep 0.5; exec gnome-terminal --role=htop -e htop '"; \
exec --no-startup-id "sh -c 'sleep 0.6; exec gnome-terminal --role=eq -e cava'"


bindsym $mod+n exec "~/.config/i3/rename-workspace.sh"


